<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>edu.si.trellisldp.cassandra</groupId>
  <artifactId>trellis-cassandra</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <packaging>pom</packaging>

  <modules>
    <module>impl</module>
    <module>webapp</module>
  </modules>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
    <java.version>1.8</java.version>
    <maven.compiler.source>${java.version}</maven.compiler.source>
    <maven.compiler.target>${java.version}</maven.compiler.target>


    <trellis.version>0.8.0-SNAPSHOT</trellis.version>
    <cassandra.test.version>3.11.2</cassandra.test.version>

    <logback.version>1.2.3</logback.version>
  </properties>

  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.codehaus.mojo</groupId>
          <artifactId>cassandra-maven-plugin</artifactId>
          <version>3.6</version>
          <configuration>
            <startNativeTransport>true</startNativeTransport>
            <addTestClasspath>true</addTestClasspath>
            <!-- use a load script after resource filtering -->
            <script>${project.build.directory}/test-classes/load.cql</script>
            <systemPropertyVariables>
              <cassandra.jmx.local.port>${cassandra.jmx.local.port}</cassandra.jmx.local.port>
            </systemPropertyVariables>
            <maxMemory>512</maxMemory>
          </configuration>
          <executions>
            <execution>
              <goals>
                <goal>start</goal>
                <goal>stop</goal>
              </goals>
            </execution>
          </executions>
          <dependencies>
            <dependency>
              <groupId>org.apache.cassandra</groupId>
              <artifactId>cassandra-all</artifactId>
              <version>${cassandra.test.version}</version>
            </dependency>
          </dependencies>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>

</project>
